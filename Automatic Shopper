import selenium
from selenium import webdriver
import time
from selenium.common.exceptions import NoSuchElementException
from selenium.common.exceptions import ElementClickInterceptedException
import selenium.webdriver.support.ui

driver = webdriver.Firefox()
driver.maximize_window()
driver.get('https://www.nike.com/launch/t/air-force-1-lv8-pacific-blue')
selenium.webdriver.support.ui.WebDriverWait(driver, 10)


## These variables are the different shoe sizes being directed by their XPaths


size_6 = driver.find_element_by_xpath('/html/body/div[2]/div/div/div[1]/div/div[2]/div[2]/div/div[2]/section/div[2]/div/div[2]/div/ul/li[1]/button')
size_6_5 = driver.find_element_by_xpath('/html/body/div[2]/div/div/div[1]/div/div[2]/div[2]/div/div[2]/section/div[2]/div/div[2]/div/ul/li[2]/button')
size_7 = driver.find_element_by_xpath('/html/body/div[2]/div/div/div[1]/div/div[2]/div[2]/div/div[2]/section/div[2]/div/div[2]/div/ul/li[3]/button')
