checkout = driver.find_element_by_xpath('/html/body/div[2]/div/div/div[2]/div/div/div/div/div[3]/button[2]')
cart2 = driver.find_element_by_xpath('/html/body/div[2]/div/div/div[1]/div/div[2]/div[2]/div/section[1]/div[2]/aside/div/div[2]/div/div[2]/div/button')
# Prioritizes the size 10 selection as that is the most common shoe size
size_10.click()
try:
    size_6.click()
except ElementClickInterceptedException:
    pass
except NoSuchElementException:
    pass
else:
    cart2.click()
